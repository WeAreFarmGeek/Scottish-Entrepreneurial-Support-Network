<h3>Listing Searches for '<%= @search_type.name %>'</h3>

<table>
  <thead>
    <tr>
      <th>Search</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @searches.each do |search| %>
      <tr>
        <td><%= search.search %></td>
        <td><%= link_to 'Show', admin_search_type_search_path(@search_type, search) %></td>
        <td><%= link_to 'Edit', edit_admin_search_type_search_path(@search_type, search) %></td>
        <td><%= link_to 'Destroy', admin_search_type_search_path(@search_type, search), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tag', new_admin_search_type_search_path(@search_type) %>
