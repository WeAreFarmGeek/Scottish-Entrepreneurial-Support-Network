<h1>Change the Footer</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
    </tr>
  </thead>

  <tbody>
    <% @footers.each do |footer| %>
      <tr>
        <td><%= image_tag footer.image(:thumb) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if @footers.first %>
  <%= link_to 'Delete Footer', admin_footer_path(@footers.first.id), :method => :delete %>
<% else %>
  <%= link_to 'Set Footer', new_admin_footer_path %>
<% end %>
